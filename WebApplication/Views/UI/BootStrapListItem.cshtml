@model WebApplication.Controllers.UIModel


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "BootStrapListItem";
}

<h2>BootStrapListItem</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>UIModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">

            <ul class="list-group">
                <li class="list-group-item" data-value="1">Bangalore <a class="locationListCancel glyphicon glyphicon-remove-circle">Cancel</a></li>
                <li class="list-group-item" data-value="2">Hubli</li>
                <li class="list-group-item" data-value="3">Mangalore</li>
                
            </ul>

            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('.locationListCancel').parent().remove();
    })
</script>